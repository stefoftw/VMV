<%- include("partials/header") %>
    <div class="container bg-gradient">
        <div class="row text-center">
            <div class="col-md-4">

            </div>
            <div class="col-md-4">
                <a href="/"><button class="btn btn-success">Начална страница</button></a>
            </div>
            <div class="col-md-4">

            </div>
        </div>
        <div class="row text-center table-reponsive">
            <table class="table table-secondary">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Дата</th>
                        <th scope="col">Име</th>
                        <th scope="col">Телефон</th>
                        <th scope="col">Информация</th>
                        <th scope="col">Сума</th>
                        <th scope="col">Предаден</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.map((client)=> { %>
                        <tr class="<%= client.fixed === true ? 'table-primary' : '' %>">
                            <td>
                                <%= client.date %>
                            </td>
                            <td>

                                <%= client.name %>
                            </td>
                            <td>
                                <%= client.phone %>
                            </td>
                            <td>
                                <%= client.information %>
                            </td>
                            <td>
                                <%= client.money %>
                            </td>
                            <td>
                                <form action="/clients/<%= client.id %>" method="Patch">
                                    <button type="submit"
                                        class="<%= client.fixed === true ? 'btn btn-outline-primary' : 'btn btn-primary' %>">
                                        <%= client.fixed===true ? 'Върни' : 'Завърши' %>
                                    </button>

                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

        </div>
    </div>

    <%- include("partials/footer") %>