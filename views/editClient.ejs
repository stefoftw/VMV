<%- include("./partials/header") %>
    <div class="container bg-gradient">
        <div class="row text-center">
            <div class="form-wrapper col-md-4">


            </div>
            <div class="form-wrapper col-md-4">
                
                <form enctype="application/json" action="/editClient/<%= editClient.id  %>" method="Post" class="text-light">
                    <div class="form-group">
                        <label>Проблем</label>
                        <input type="text" class="form-control" id="info"name="information" value="<%= editClient.information  %>">
                    </div>
                    <div class="form-group">
                        <label>Телефон</label>
                        <input type="text" class="form-control" required minlength="10" maxlength="10" name="phone" value="<%= editClient.phone  %>">
                    </div>
                    <div class="form-group">
                        <label>Име</label>
                        <input type="text" class="form-control" name="name" value="<%= editClient.name  %>">
                    </div>
                    <div class="form-group">
                        <label>Сума</label>
                        <input type="number" step="any" min="0" class="form-control" name="money" value="<%= editClient.money  %>">
                    </div>
                    </br>
                    <input type="hidden" name="_method" value="PATCH" />
                    <button type="submit" class="btn btn-primary">Промени</button>
                </form>
            </div>
            <div class="form-wrapper col-md-4">

                
            </div>
        </div>
    </div>

    <%- include("./partials/footer") %>